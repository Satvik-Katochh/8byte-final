{
  "name": "elevator-simulation",
  "version": "1.0.0",
  "description": "Web-based elevator simulation system with intelligent scheduling algorithm",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "dev:client": "cd src/client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js",
    "postinstall": "npm run build",
    "railway:build": "npm install && cd src/client && npm install && cd ../.. && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts client/src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules client/node_modules"
  },
  "keywords": [
    "elevator",
    "simulation",
    "scheduling",
    "algorithm",
    "typescript",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/socket.io": "^3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
